{
  "name": "I Want To Rage",
  "description": "Life is hard. To relieve stress, I must destroy.\nPress F to toggle between flamethrower & cursor. Left click, A & D to control.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "rage_guy.png"
  } ,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/matter.min.js", "dist/content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
    "web_accessible_resources": [
    {
        "resources": ["flame-thrower.png"],
        "matches": ["<all_urls>"]
    }
]
}